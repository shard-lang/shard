#ifndef TOKEN
#define TOKEN(name)
#endif

#ifndef PUNCTUATOR
#define PUNCTUATOR(name, str) TOKEN(name)
#endif

#ifndef KEYWORD
#define KEYWORD(name, str)
#endif

/* ************************************************************************* */

TOKEN(End)
TOKEN(CommentLine)
TOKEN(CommentBlock)
TOKEN(Identifier)
TOKEN(Keyword)
TOKEN(String)
TOKEN(Int)
TOKEN(Float)
TOKEN(Char)

/* ************************************************************************* */

PUNCTUATOR(Period,              ".")
PUNCTUATOR(Comma,               ",")
PUNCTUATOR(Colon,               ":")
PUNCTUATOR(Semicolon,           ";")
PUNCTUATOR(Question,            "?")
PUNCTUATOR(Tilde,               "~")
PUNCTUATOR(Hash,                "#")
PUNCTUATOR(Backslash,           "\\")

PUNCTUATOR(BraceO,              "{")
PUNCTUATOR(BraceC,              "}")
PUNCTUATOR(SquareO,             "[")
PUNCTUATOR(SquareC,             "]")
PUNCTUATOR(ParenO,              "(")
PUNCTUATOR(ParenC,              ")")

PUNCTUATOR(Equal,               "=")
PUNCTUATOR(EqualEqual,          "==")
PUNCTUATOR(Exclaim,             "!")
PUNCTUATOR(ExclaimEqual,        "!=")
PUNCTUATOR(Plus,                "+")
PUNCTUATOR(PlusPlus,            "++")
PUNCTUATOR(PlusEqual,           "+=")
PUNCTUATOR(Minus,               "-")
PUNCTUATOR(MinusMinus,          "--")
PUNCTUATOR(MinusEqual,          "-=")
PUNCTUATOR(Star,                "*")
PUNCTUATOR(StarEqual,           "*=")
PUNCTUATOR(Slash,               "/")
PUNCTUATOR(SlashEqual,          "/=")
PUNCTUATOR(Caret,               "^")
PUNCTUATOR(CaretEqual,          "^=")
PUNCTUATOR(Percent,             "%")
PUNCTUATOR(PercentEqual,        "%=")

PUNCTUATOR(Amp,                 "&")
PUNCTUATOR(AmpAmp,              "&&")
PUNCTUATOR(AmpEqual,            "&=")
PUNCTUATOR(AmpAmpEqual,         "&&=")
PUNCTUATOR(Pipe,                "|")
PUNCTUATOR(PipePipe,            "||")
PUNCTUATOR(PipeEqual,           "|=")
PUNCTUATOR(PipePipeEqual,       "||=")
PUNCTUATOR(Less,                "<")
PUNCTUATOR(LessLess,            "<<")
PUNCTUATOR(LessEqual,           "<=")
PUNCTUATOR(LessLessEqual,       "<<=")
PUNCTUATOR(Greater,             ">")
PUNCTUATOR(GreaterGreater,      ">>")
PUNCTUATOR(GreaterEqual,        ">=")
PUNCTUATOR(GreaterGreaterEqual, ">>=")

/* ************************************************************************* */

KEYWORD(Class,      "class")
KEYWORD(Namespace,  "namespace")

KEYWORD(Public,     "public")
KEYWORD(Protected,  "protected")
KEYWORD(Private,    "private")

KEYWORD(Var,        "var")
KEYWORD(Auto,       "auto")
KEYWORD(Int,        "int")
KEYWORD(Char,       "char")
KEYWORD(Bool,       "bool")
KEYWORD(Float,      "float")
KEYWORD(String,     "string")

KEYWORD(Null,       "null")
KEYWORD(True,       "true")
KEYWORD(False,      "false")

KEYWORD(If,         "if")
KEYWORD(Else,       "else")
KEYWORD(Do,         "do")
KEYWORD(While,      "while")
KEYWORD(Switch,     "switch")
KEYWORD(For,        "for")
KEYWORD(Try,        "try")
KEYWORD(Catch,      "catch")

KEYWORD(Return,     "return")
KEYWORD(Break,      "break")
KEYWORD(Continue,   "continue")
KEYWORD(Throw,      "throw")
KEYWORD(Case,       "case")
KEYWORD(Default,    "default")

/* ************************************************************************* */

#undef KEYWORD
#undef PUNCTUATOR
#undef TOKEN

/* ************************************************************************* */
